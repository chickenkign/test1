<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnRest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RestPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etEmailRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="244dp"
            android:ems="10"
            android:hint="entr email to rest..."
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="57dp"
            android:text="REST"
            app:layout_constraintEnd_toEndOf="@+id/etEmailRest"
            app:layout_constraintTop_toBottomOf="@+id/etEmailRest" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>