<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentSignup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etEmailSignup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="118dp"
            android:layout_marginBottom="61dp"
            android:ems="10"
            android:hint="email..."
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/etConfirmPasswordSignup"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordSignup"
            app:layout_constraintStart_toStartOf="@+id/etPasswordSignup"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPasswordSignup"
            android:layout_width="272dp"
            android:layout_height="63dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="61dp"
            android:layout_marginBottom="59dp"
            android:ems="10"
            android:hint="password..."
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etConfirmPasswordSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etEmailSignup" />

        <EditText
            android:id="@+id/etConfirmPasswordSignup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="confirm password..."
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnSingup"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordSignup"
            app:layout_constraintStart_toStartOf="@+id/etPasswordSignup"
            app:layout_constraintTop_toBottomOf="@+id/etEmailSignup" />

        <Button
            android:id="@+id/btnSingup"
            android:layout_width="155dp"
            android:layout_height="0dp"
            android:layout_marginBottom="347dp"
            android:text="signup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etConfirmPasswordSignup"
            app:layout_constraintStart_toStartOf="@+id/etConfirmPasswordSignup"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPasswordSignup" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>